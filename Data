
# Download and extract datasets (example for LIAR dataset)
import os
import requests
import zipfile

url = "https://www.cs.ucsb.edu/~william/data/liar_dataset.zip"
output = "liar_dataset.zip"

if not os.path.exists("liar_dataset.zip"):
    print("Downloading dataset...")
    r = requests.get(url)
    with open(output, "wb") as f:
        f.write(r.content)

    with zipfile.ZipFile(output, 'r') as zip_ref:
        zip_ref.extractall(".")

print("Dataset ready.")
